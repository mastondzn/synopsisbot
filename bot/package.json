{
    "name": "@synopsis/bot",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "exports": {
        "./rpc": {
            "types": "./dist/services/rpc/index.d.ts"
        }
    },
    "scripts": {
        "start": "pnpm with-env tsx src/index.ts",
        "dev": "pnpm start",
        "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "test": "SKIP_ENV_VALIDATION=true vitest",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenv -e ../.env --"
    },
    "dependencies": {
        "@discordjs/collection": "2.1.0",
        "@hono/node-server": "1.11.1",
        "@mastondzn/dank-twitch-irc": "7.1.0",
        "@sentry/node": "7.115.0",
        "@sentry/profiling-node": "7.115.0",
        "@synopsis/db": "workspace:*",
        "@synopsis/env": "workspace:*",
        "@synopsis/scopes": "workspace:*",
        "@twurple/api": "7.1.0",
        "@twurple/auth": "7.1.0",
        "chalk": "5.3.0",
        "cron": "3.1.7",
        "hono": "4.3.9",
        "ioredis": "5.4.1",
        "is-docker": "3.0.0",
        "netter": "^0.0.3",
        "pretty-ms": "9.0.0",
        "prom-client": "15.1.2",
        "remeda": "2.0.10",
        "semaphore-async-await": "1.5.1",
        "zod": "3.23.8",
        "zod-validation-error": "3.3.0"
    },
    "devDependencies": {
        "@mastondzn/eslint": "0.10.0",
        "@synopsis/tsconfig": "workspace:*",
        "@types/node": "20.12.12",
        "dotenv-cli": "7.4.2",
        "eslint": "8.57.0",
        "tsc-alias": "1.8.10",
        "tslib": "2.6.2",
        "tsx": "4.19.2",
        "typescript": "5.4.5",
        "vitest": "1.6.0"
    }
}
