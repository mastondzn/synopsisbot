{
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/bower_components": true,
        "**/*.code-search": true,
        "pnpm-lock.yaml": true
    },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.workingDirectories": [{ "pattern": "./packages/*/" }, "./bot", "./db"],
    "eslint.codeActionsOnSave.mode": "all",
}
